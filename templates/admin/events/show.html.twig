{% extends 'base.html.twig' %}

{% block title %}Events
{% endblock %}

{% block body %}
	<h1>Events</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ event.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ event.name }}</td>
			</tr>
			<tr>
				<th>Date_start</th>
				<td>{{ event.dateStart ? event.dateStart|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>End_date</th>
				<td>{{ event.endDate ? event.endDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Paying</th>
				<td>{{ event.paying ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Prix</th>
				<td>{{ event.prix }}</td>
			</tr>
			<tr>
				<th>Numberofregistrants</th>
				<td>{{ event.numberofregistrants }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_events_index') }}">back to list</a>

	<a href="{{ path('app_events_edit', {'id': event.id}) }}">edit</a>

	{{ include('events/_delete_form.html.twig') }}
{% endblock %}
